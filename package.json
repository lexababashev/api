{
  "scripts": {
    "dev": "bun --env-file=.env --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun run dist/index.js",
    "lint": "bun eslint .",
    "format": "prettier --write .",
    "db:apply-migrations": "bun run ./src/db/postgres/migrations/migrationRunner.ts",
    "db:apply-migrations-local": "bun --env-file=.env run ./src/db/postgres/migrations/migrationRunner.ts",
    "test:routes": "jest --detectOpenHandles --forceExit ./dist/app/routes/*",
    "test:single": "bun test ./src/routes/eventsRoutes.test.ts"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "@aws-sdk/client-s3": "^3.658.1",
    "@hono/swagger-ui": "^0.5.1",
    "@hono/zod-validator": "^0.2.2",
    "bcryptjs": "^2.4.3",
    "hono": "^4.7.4",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.12.0",
    "postgres": "^3.4.4",
    "randomstring": "^1.3.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bcryptjs": "^2.4.3",
    "@types/bun": "1.1.6",
    "@types/crypto-js": "^4.2.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/pg": "^8.11.6",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "postgres-migrations": "^5.3.0",
    "prettier": "^3.4.2",
    "typescript-eslint": "^8.19.0"
  }
}
